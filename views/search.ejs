<!-- views/search.ejs -->

<h1>Search Recipes</h1>
<form method="GET" action="/search">
  <input type="text" name="q" value="<%= query || '' %>" placeholder="Search for a recipe...">
  <button type="submit">Search</button>
</form>
<ul>
  <% results.forEach(r => { %>
    <li><a href="/recipe/<%= r.id %>"><%= r.title %></a></li>
  <% }) %>
</ul>
