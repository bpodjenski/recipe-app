<!-- views/home.ejs -->
<h1 class="mb-4">All Recipes</h1>
<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-3">
    <% recipes.forEach(recipe => { %>
      <div class="col">
        <a href="/recipe/<%= recipe.id %>" class="text-decoration-none text-dark">
          <div class="card h-100" style="cursor: pointer;">
            <% if (recipe.imagePath) { %>
              <img src="<%= recipe.imagePath %>" class="card-img-top" alt="Recipe Image" style="height: 80px; object-fit: cover;">
            <% } else { %>
              <div class="card-img-top d-flex align-items-center justify-content-center bg-light text-muted" style="height: 80px;">
                No image available
              </div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= recipe.name %></h5>
              <p class="card-text">Cook Time: <%= recipe.cookTime %></p>
              <p class="card-text text-truncate"><%= recipe.notes %></p>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
